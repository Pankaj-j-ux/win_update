<!DOCTYPE html>
<html lang="en">
<head>
      {{>headlink}}


</head>
<body>

    {{>navbar}}
  
    <div class="container main_body mt-5">
        <div class="row text-center">
            <div class="col-12 mx-auto">
                
                <div class="req_section">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city Name" autocomplete="off"/>
                        <input type="submit" id="submit_btn" value="Search"/>
                    </form>
                </div>

                <div class="res_section mt-5">
                    <div class="top_layer">
                        <p class="day">Sunday</p>
                        <p class="day ms-auto">10:00</p>
                    </div>
                    <div class="bottom_layer">
                        <p id="city_name">GET OUTPUT HERE</p>
                        <div class="middle_layer data_hide text-center">
                            <p id="temp"><span>0</span><sup>0</sup>C</p>
                            <p id="temp_logo"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>        
    </div> 
    
    {{>footer}}


    <!-- Bootstrap JS -->
